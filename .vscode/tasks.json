{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build and compile all source files",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/a.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Run the executable file",
            "command": "${workspaceFolder}/a.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task created by user"
        }
    ],
    "version": "2.0.0"
}